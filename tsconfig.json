{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@form": ["./src/components/nano/form/index.tsx"],
      "@btn": ["./src/components/nano/btn/index.tsx"],
      "@nano": ["./src/components/nano/index.tsx"],
      "@layout": ["./src/components/layout/Layout.tsx"],
      "@fn/*": ["./src/functions/*"],
      "@tooltip": ["./src/components/nano/tooltip/ToolTip.tsx"],
      "@components/*": ["./src/components/*"],
      "@view/*": ["./src/components/views/*"],
      "@formSkeleton": ["./src/components/form/formSkeleton.tsx"],

      "@redux": ["./src/components/state/Redux.tsx"],
      "@provider": ["./src/components/state/Provider.tsx"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/**/*.tsx", "**/**/**/*.tsx"],
  "exclude": ["node_modules"]
}
